<%- include('partials/header') %>
<div class="container">
  <h2 class="mb-3">Compose</h2>
  <form action="/compose" method="post">
    <div class="mb-3">
      <label class="form-label fw-medium" for="inputTitle">Title</label>
      <input class="form-control" type="text" name="inputTitle" />
    </div>
    <div class="mb-3">
      <label class="form-label fw-medium" for="inputText">Post</label>
      <textarea
        class="form-control"
        name="inputText"
        id=""
        cols="30"
        rows="10"
      ></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Publish</button>
  </form>
</div>
<%- include('partials/footer') %>
